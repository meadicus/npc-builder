<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.row {
			display: table-row;
		}
		.cell {
			display: table-cell;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:FlowPanel>
			<g:Label>Add</g:Label>
			<g:FlowPanel addStyleNames="{style.row}">
				<g:Button ui:field="addWeaponButton" addStyleNames="{style.cell}">Weapon Attack</g:Button>
				<g:Button ui:field="addDamageEOButton" addStyleNames="{style.cell}">Damage Extraordinary Attack</g:Button>
			</g:FlowPanel>
			<g:FlowPanel addStyleNames="{style.row}">
				<g:Button ui:field="addNaturalButton" addStyleNames="{style.cell}">Natural Attack</g:Button>
				<g:Button ui:field="addSaveEOButton" addStyleNames="{style.cell}">Save Extraordinary Attack</g:Button>
			</g:FlowPanel>
			<g:HTML>
				<hr/>
			</g:HTML>
			<g:Label>Current</g:Label>
			<g:ListBox ui:field="editAttackListBox" visibleItemCount="8" />
			<g:FlowPanel>
				<g:Button ui:field="editButton">Edit</g:Button>
				<g:Button ui:field="removeButton">Remove</g:Button>
			</g:FlowPanel>
		</g:FlowPanel>
	</g:HTMLPanel>
</ui:UiBinder> 